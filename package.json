{
  "name": "osems",
  "description": "Open Source Email Marketing Software (OSEMS)",
  "author": "Adrian Bienias <adrian@bienias.dev>",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://osems.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianbienias/osems"
  },
  "bugs": {
    "url": "https://github.com/adrianbienias/osems/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "(prisma generate) && (prisma migrate deploy) && (dotenv -- ts-node ./src/libs/admin.ts)",
    "cron": "dotenv -- ts-node ./src/libs/cron.ts",
    "db:seed": "dotenv -- ts-node ./__tests__/seed-db.ts",
    "db:reset": "prisma migrate reset",
    "dev": "(npm run lint) && (prisma db push) ; (npm run cron) & (next dev)",
    "test": "(npm run lint) && (npm run test:unit) && (npm run test:e2e)",
    "test:unit": "(dotenv -e .env.test -- prisma db push) && (dotenv -e .env.test -- vitest --run)",
    "test:unit:watch": "(dotenv -e .env.test -- prisma db push) && (dotenv -e .env.test -- vitest --coverage)",
    "test:e2e": "(dotenv -e .env.test -- prisma db push) && (dotenv -e .env.test -- playwright test)",
    "lint": "next lint",
    "build": "(prisma migrate deploy) ; (next build)",
    "start": "(npm run cron) & (next start)"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@playwright/test": "^1.32.1",
    "@prisma/client": "^4.11.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/cors": "^2.8.13",
    "@types/html-to-text": "^9.0.0",
    "@types/marked": "^4.0.8",
    "@types/node": "18.15.2",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "@types/prettier": "^2.7.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@vitest/coverage-c8": "^0.29.2",
    "autoprefixer": "^10.4.14",
    "console-stamp": "^3.1.1",
    "cors": "^2.8.5",
    "dependency-cruiser": "^12.10.1",
    "dotenv-cli": "^7.1.0",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "html-to-text": "^9.0.4",
    "html-validate": "^7.13.3",
    "husky": "^8.0.3",
    "marked": "^4.3.0",
    "next": "13.2.4",
    "next-auth": "^4.20.1",
    "node-cron": "^3.0.2",
    "node-mocks-http": "^1.12.2",
    "nodemailer": "^6.9.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.5",
    "prisma": "^4.11.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-select": "^5.7.2",
    "swr": "^2.1.0",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.9.5",
    "vitest": "^0.29.2"
  }
}
